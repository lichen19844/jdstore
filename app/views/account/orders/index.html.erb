<div class="container-fluid">
	<div class="row">
    <div class="odhead">
      <div class="">
        <h2>数字资产，你未来资产的一部分！</h2>
      </div>
    </div>

    <div class="odsection">
      <div class="odsection1">
        <h2 class="odfont">订单列表 </h2>
      </div>

      <div class="odsection2">
        <table class="table">
          <thead class="">
            <tr class="">
              <th style="text-align: center"><%= t('订单号') %></th>
              <th style="text-align: center"><%= t('订单总额') %></th>
              <th style="text-align: center"><%= t('下单日期') %></th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
            <tr>
              <td># <%= link_to(order.id, order_path(order.token)) %></td>
              <td>$ <%= order.total %></td>
              <td><%= order.created_at.strftime("%Y-%m-%d - %H:%M") %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
