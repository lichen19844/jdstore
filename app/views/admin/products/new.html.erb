<h2> New Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description, as: :ckeditor  %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <!-- <div class="group">
    <%= f.select :category_id, @categories %>
  </div> -->

  <div class="group">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, :multiple => true, name: "photos[avatar][]" %>
  </div>

  <div class="group"> 
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "选择类别") %>
  </div>

  <br>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
