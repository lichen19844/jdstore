<div class="row register">
  <div class="col-md-4 col-md-offset-4 user_setup_content">
    <div class="col-md-10 col-md-offset-1">
      <h2><span class="fa fa-sign-in">&nbsp;</span>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :login, :label => 'email or nickname', placeholder: '请输入邮箱或用户名', error: '邮箱/昵称',  required: true, autofocus: true %>
          <%= f.input :password, placeholder: '请输入6-16位密码', error: '请输入6-16位密码', required: true, input_html: { maxlength: 16 }  %>
          <%= f.input :remember_me, :label => '记住我', as: :boolean if devise_mapping.rememberable? %>
          <%= link_to "忘记密码？", new_password_path(resource_name), class: "pwd" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class:"button" %>
        </div>
      <% end %>

      <hr/>
        <div class="account">
          <%= link_to "没有账号，即刻注册", new_registration_path(resource_name) %><br />
        </div>

    </div>
  </div>
</div>
