<div class="col-xs-6 col-md-4 ">
  <%= link_to product_path(product) do %>
    <% if product.photos.present? %>
      <%= image_tag(product.photos[0].avatar.thumb.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/250x150&text=No Pic", class: "thumbnail") %>
    <% end %>
  <% end %>
  <span class="favorite-title"><%= product.title %></span>
  <span class="favorite-price"> &nbsp;&nbsp;&nbsp;&nbsp;ï¿¥<%= product.price %></span>
  &nbsp;&nbsp;&nbsp;
  <% if !product.members.include?(current_user) %>
    <%= link_to("",favorite_product_path(product),method: :post, class: "fa fa-thumbs-o-up fa-1x") %><%= product.members.count %>
  <% else %>
    <%= link_to("", unfavorite_product_path(product),method: :post,  class: "fa fa-thumbs-up fa-1x", style: "color:red") %><%= product.members.count %>
  <% end %>
</div>
